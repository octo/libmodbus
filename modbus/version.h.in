#ifndef MODBUS_VERSION_H
#define MODBUS_VERSION_H

#ifdef __cplusplus
extern "C" {
#endif

#define MB_VERSION_MAJOR @LIBMODBUS_MAJOR@
#define MB_VERSION_MINOR @LIBMODBUS_MINOR@
#define MB_VERSION_PATCH @LIBMODBUS_PATCH@

#define MB_VERSION_STRING "@LIBMODBUS_MAJOR@.@LIBMODBUS_MINOR@.@LIBMODBUS_PATCH@"

#define MB_VERSION_ENCODE(major, minor, patch) \
        ((major) * 10000 + (minor) * 100 + (patch))

#define MB_VERSION \
        MB_VERSION_ENCODE(MB_VERSION_MAJOR, MB_VERSION_MINOR, MB_VERSION_PATCH)

extern const int modbus_version_g;
extern const char * const modbus_version_string_g;

int modbus_version (void);
const char *modbus_version_string (void);

#ifdef __cplusplus
}
#endif

#endif /* MODBUS_VERSION_H */
